{
  "name": "rComments",
  "version": "1.0.0",
  "description": "Quick and hassle-free traversal of Reddit comments",
  "main": "rComments.js",
  "scripts": {
    "webpack": "webpack --config webpack.config.js",
    "dev": "webpack --config webpack.config.js --watch --mode development",
    "build-js": "webpack --mode production",
    "build-css": "cleancss rComments.css -o ./dist/rComments.css",
    "build": "yarn run lint && mkdir -p dist && cp -R static/* dist && yarn run build-js && yarn run build-css",
    "clean-build": "rm -rf dist/* ../builds/* && yarn run build",
    "zip-chrome": "yarn run clean-build && mkdir -p ../builds/chrome-extension && cp -R dist/* ../builds/chrome-extension/ && cd ../builds/chrome-extension && zip -r -FS ../chrome-extension.zip *",
    "zip-firefox": "yarn run clean-build && mkdir -p ../builds/firefox-extension && cp -R dist/* ../builds/firefox-extension/ && cd ../builds/firefox-extension && zip -r  -FS ../firefox-extension.zip *",
    "test": "jest",
    "lint": "eslint rComments.ts",
    "fix": "eslint rComments.ts --fix",
    "prettier-fix": "yarn prettier --write ."
  },
  "author": "Ignacio Ampuero",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/plugin-transform-regenerator": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.14.4",
    "@babel/preset-es2015": "^7.0.0-beta.53",
    "@babel/preset-typescript": "^7.14.5",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "babel-loader": "^8.2.2",
    "clean-css-cli": "^4.3.0",
    "eslint": "^4.18.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-config-airbnb-base": "^11.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "jest": "^27.0.4",
    "prettier": "2.3.1",
    "ts-loader": "^9.2.3",
    "typescript": "^4.3.2",
    "webpack": "^5.76.0",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {}
}
